<configuration>

<property>
              <name>dfs.support.append</name>
              <value>true</value>
              <description>确保再使用HDFS存储时，不出现数据遗失</description>
       </property>
       <property>
              <name>hbase.rootdir</name>
              <value>hdfs://128.178.242.119:49000/hbase</value>
              <description>hbase的存储根路径</description>
       </property>
       <property>
              <name>hbase.cluster.distributed</name>
              <value>true</value>
              <description>是否采用集群方式部署</description>
       </property>


       <property>
           <name>hbase.master</name>
           <value>128.178.242.119:60000</value>
       </property>

       <property>
              <name>hbase.zookeeper.quorum</name>
              <value>128.178.158.79,128.178.158.78,128.178.242.119</value>
              <description>zookeeper的server地址，多台机器用逗号隔开</description>
       </property>
       <property>
              <name>hbase.zookeeper.property.dataDir</name>
              <value>/home/guo/myfiles/hbase/zookeeper</value>
              <description>zookeeper的数据存储目录</description>
       </property>

       <property>  
  
      <name>hbase.zookeeper.property.clientPort</name>  
  
      <value>2181</value>  
  
      <description>Property fromZooKeeper's config zoo.cfg.  
  
      The port at which the clients willconnect.  
  
      </description>
      </property>  
 
</configuration>
